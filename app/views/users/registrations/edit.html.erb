<div class="form-box">
    <h5>Atualize sua conta:</h5>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :first_name,
                    autofocus: true,
                    required: true,
                    :label => "Nome:" %>
        <%= f.input :last_name,
                    required: true,
                    :label => "Sobrenome:" %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    :label => "Email:" %>
        <%= f.input :password,
                    required: true,
                    hint: ("Deixe em branco caso não queira alterar a senha; mínimo de #{@minimum_password_length} caracteres"),
                    input_html: { autocomplete: "new-password" },
                    :label => "Criar nova senha:" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => "Confirmar nova senha:" %>
        <%= f.input :current_password,
                    required: true,
                    hint: ("Precisamos da senha atual para confirmar as mudanças"),
                    input_html: { autocomplete: "current-password" },
                    :label => "Senha atual:" %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirmar" %>
        </div>
    <% end %>
    <br>
    <%= link_to "Voltar", :back, class: 'text-link' %>
</div>