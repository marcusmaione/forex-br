<div class="form-box">
    <h5>Crie sua conta:</h5>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <%= f.input :first_name,
                    autofocus: true,
                    required: true,
                    :label => "Nome:" %>
        <%= f.input :last_name,
                    required: true,
                    :label => "Sobrenome:" %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    :label => "Email:" %>
        <%= f.input :password,
                    required: true,
                    hint: ("Mínimo de #{@minimum_password_length} caracteres"),
                    input_html: { autocomplete: "new-password" },
                    :label => "Crie uma senha:" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => "Confirmar senha:" %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirmar" %>
        </div>
    <% end %>

    <p>Já tem uma conta?</p>
    <%= link_to "Entrar", new_user_session_path, class: 'text-link' %>
    <%= link_to "Voltar", :back, class: 'text-link' %>
</div>